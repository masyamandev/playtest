# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /users                      controllers.Users.list
GET     /users/register             controllers.Users.registerForm
POST    /users/register             controllers.Users.addUser
GET     /users/login                controllers.Users.loginForm
POST    /users/login                controllers.Users.login
GET     /users/logout               controllers.Users.logout
GET     /users/:id                  controllers.Users.showUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
